#!/usr/bin/env node

const fastatic = require('../index');
const pkg = require('../package');

const program = require('commander')
	.version(pkg.version)
	.description(`${pkg.name} (v${pkg.version}): ${pkg.description}`)
	.usage('<src> [options]')
	.option('-d, --dest [value]', 'Output destination')
	.parse(process.argv);

fastatic({
	src: program.args[0],
	dest: program.dest
})
.then(config => console.log('Done. Optimised static files in', config.dest))
	.catch(err => {
		console.error(err.message);
		process.exitCode = 1;
	});
